<!DOCTYPE html>
<html>
<head>
  <title>Lolcommits</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<a href="https://github.com/kenmazaika/lolcommit-server"><img style="position: absolute; top: 35px; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>
	<div class="navbar navbar-fixed-top">
   <div class="navbar-inner">
     <div class="container">
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
       </a>

		<%= link_to 'Lolcommits', root_url, :class => 'brand'%>
       <div class="nav-collapse" id="main-menu">
		<ul class="nav" id="main-menu-left">
			<% if current_user%>
				<% current_user.repos.each do |repo|%>
				<li>
					<%= link_to repo.name, repo_path(repo) %>
					</li>
				<% end %>
				<li><%= link_to 'New Repo', new_repo_path %></li>
                                <li><%= link_to 'Account Info', account_users_path %></li>
                                <li><%= link_to 'My Profile', user_path(current_user) %></li>
			<% end %>
</ul>
       </div>
     </div>
   </div>
 </div>
    <div class="container" style="margin-top:60px;">
 

<%= yield %>

</div>


<% unless Rails.env.development? %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-33477708-1']);
    _gaq.push(['_setDomainName', 'lolcommits.com']);
    _gaq.push(['_trackPageview']);

    (function() {
     var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
     ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
     var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
     })();

   </script>
 <% end %>

</body>
</html>
